<% if !@fpl_account %>
  <h1>Connect your FPL Account</h1>
  <%= form_with url: fpl_accounts_url do |f| %>
    <p>
      <%= f.label :username %>
      <%= f.email_field :username, autocomplete: "off" %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </p>
    <p>
      <%= f.submit "Add FPL Account" %>
    </p>
    <%# <%= button_to "Delete",
          fpl_account_path, method: :delete,
          data: { confirm: "Are you sure?" } %> 
  <% end %>
<% end %>
